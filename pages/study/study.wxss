/* 纵向排列 */
.wordlist{
  display: flex; 
  flex-direction: column;     
}

.wordlist .worditem {
  height: 300rpx;
  /* background-color: darkgrey; */
  display: flex; 
  flex-direction: row; 
  align-items: center;
   /* 子元素左右排列 */
  justify-content: space-between;
  border:1rpx solid red;
}

.wordlist .worditem .wordleft{
  /* background-color: grey; */
  height: 300rpx;
  width: 260rpx;
  display: flex; 
  flex-direction: column;
  align-items: center;
}

.wordlist .worditem .wordleft image {
  height: 260rpx;
  width: 260rpx;
}

/* 右边我已会和收藏按钮 */
.wordlist .worditem .wordright{
  height: 300rpx;
  width: 400rpx;
  display: flex; 
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.wordlist .worditem .wordright image {
  height: 100rpx;
  width: 100rpx;
}